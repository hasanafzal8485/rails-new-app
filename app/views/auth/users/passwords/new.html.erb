<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px; padding: 50px">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Forgot your password?</p>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "components/error_messages", resource: resource %>
                  <div class="mx-1 mx-md-4">
                    <div class="d-flex flex-row align-items-center mb-5">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw pt-3"></i>
                      <div class="form-outline flex-fill mb-0">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg"%>
                    </div>
                  </div>
                <% end %>
                <div class="text-center">
                  <p>Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
                </div>
                <div class="text-center">
                  <p>Already a member? <%= link_to "Log in", new_session_path(resource_name) %></p>
                </div>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
